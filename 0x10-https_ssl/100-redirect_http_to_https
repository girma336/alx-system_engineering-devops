global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend girma-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/girma.tech.pem
	http-request redirect scheme https code 301 unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend girma-tech-backend

backend girma-tech-backend
	balance roundrobin
	server 4416-web-01 3.239.12.19:80 check
	server 4416-web-02 3.234.252.167:80 check
